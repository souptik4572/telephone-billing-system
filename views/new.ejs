<%- include('templates/header.ejs') %> <%- include('./navbar.ejs') %>
<div class="new-connection">
	<h1>Add New Connection</h1>
	<div class="container">
		<div class="row">
			<div class="container">
				<form class="col s12" action="/connections" method="POST">
					<div class="row">
						<div class="input-field col s6">
							<i class="material-icons prefix">account_circle</i>
							<input
								id="first_name"
								type="text"
								class="validate"
								name="connection[firstName]"
							/>
							<label for="first_name">First Name</label>
						</div>
						<div class="input-field col s6">
							<i class="material-icons prefix">account_circle</i>
							<input
								id="last_name"
								type="text"
								class="validate"
								name="connection[lastName]"
							/>
							<label for="last_name">Last Name</label>
						</div>
					</div>
					<div class="row">
						<div class="input-field col s6">
							<i class="material-icons prefix">phone</i>
							<input
								id="icon_telephone"
								type="tel"
								class="validate"
								name="connection[mobileNumber]"
							/>
							<label for="icon_telephone">Telephone</label>
						</div>
						<div class="input-field col s6">
							<select class="validate" name="connection[connectionType]">
								<option value="" disabled selected>Choose your plan</option>
								<option value="standard">Standard</option>
								<option value="premium">Premium</option>
								<option value="platinum">Platinum</option>
							</select>
							<label>Connection Type</label>
						</div>
					</div>
					<div class="row">
						<div class="row">
							<div class="input-field col s12">
								<i class="material-icons prefix">home</i>
								<textarea
									id="address"
									class="materialize-textarea validate"
									name="connection[address]"
								></textarea>
								<label for="address">Address</label>
							</div>
						</div>
					</div>
					<div class="row">
						<button class="btn waves-effect waves-light" type="submit" name="action">
							Create Connection
						</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
<%- include('templates/footer.ejs') %>
