<%- include('templates/header.ejs') %> <%- include('./navbar.ejs') %>
    <div class="connections">
        <div class="container">
            <div class="container header">
                <h1>All your users</h1>
            </div>
            <div class="row">
                <% users.forEach(function(user) { %>
                    <% if(user.role!=="admin") { %>
                        <div class="col s12 m6 l4">
                            <div class="card">
                                <div class="card-content">
                                    <span class="card-title">
                                        <%= user.name %>
                                            <span class="new badge pink accent-2" data-badge-caption="Pay"></span>
                                    </span>
                                    <p>
                                        <span class="planType <%= user.name %>">
                                            <%= user.name.toUpperCase() %>
                                        </span>
                                    </p>
                                    <div class="imp-details">
                                        <p>
                                            Owned against - <%= user.name %>
                                                <%= user.name %>
                                                    <br />
                                        </p>
                                        <p>Contact Info - <%= user.name %>
                                        </p>
                                        <!-- <p>Address - <%= user.name %></p> -->
                                    </div>
                                </div>
                                <div class="card-action">
                                    <a class="tooltipped btn-floating btn-small waves-effect waves-light cyan"
                                        data-position="bottom" data-tooltip="Edit"
                                        href="/connections/<%= user._id %>/edit"><i
                                            class="material-icons">edit</i></a>
                                    <a class="tooltipped btn-floating waves-effect waves-light light-green darken-1"
                                        href="/connections/<%= user._id %>" data-position="bottom"
                                        data-tooltip="Get Info"><i class="material-icons">info</i></a>
                                    <form action="/connections/<%= user._id %>?_method=DELETE" method="POST">
                                        <button
                                            class="tooltipped btn-floating btn-small waves-effect waves-light red darken-1"
                                            data-position="bottom" data-tooltip="Delete">
                                            <i class="material-icons">delete</i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <% } %>
                            <% }) %>
            </div>
        </div>
<%- include('templates/footer.ejs') %>